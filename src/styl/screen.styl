@require 'nib'

global-reset()

body
  font-size 16px
  font-family 'Helvetica Neue', Arial, Helvetica, sans-serif
  background #000

#container, canvas, #ui
  width (1080 / 3px)
  height (1920 / 3px)

#container
  position relative
  margin 0 auto
  margin-top 1em

canvas
  display block

#ui
  position absolute
  top 0
  left 0
  color #fff

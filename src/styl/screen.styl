@require 'nib'

global-reset()

html
  box-sizing border-box;

*, *:before, *:after
  box-sizing inherit

html, body
  height 100%

body
  background #000
  display flex
  flex-direction row
  // horizontally center
  justify-content center
  // vertically center
  align-items center

#loading
  font 24px/1.5 'Helvetica Neue', Arial, Helvetica, sans-serif
  color #fff
  font-weight 200
  text-align center
  display block
  strong
    font-weight bold

canvas
  display none

canvas, #loading
  //width (1080 / 3px)
  //height (1920 / 3px)
  // width and height set for iphone 4 as baseline
  width 270px
  height 480px


@media (min-height: 568px) 
  canvas, #loading
    width 320px
    height 568px

@media (min-height: 667px) 
  canvas, #loading
    width 375px
    height 667px

@media (min-height: 736px) 
  canvas, #loading
    width 414px
    height 736px

@media (min-height: 1024px) 
  canvas, #loading
    width 567px
    height 1024px

